<%= form_for @post do |form| %>
  <%= form.label :message %>
  <%= form.text_field :message, placeholder: "What's on your mind?" %>

  <%= form.submit "Submit" %>
<% end %>

<% @posts.each do |post| %>
  <div class='post'> 
    <p><%= post.message %></p>
    <p><%= post.created_at.strftime("%-d %b %Y" + ' at ' + "%H:%M") %></p>
    <%= link_to 'Delete', post, :method => :delete %>
  </div>
<% end %>
